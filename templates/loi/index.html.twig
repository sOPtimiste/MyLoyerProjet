{% extends 'base.html.twig' %}

{% block title %}Loi index{% endblock %}

{% block body %}
<h1 class="text-center text-white mx-4" style="background-color:#459DEC">Liste des lois </h1>

<div class="container mt-2">
    <div class="row">
        <div class="col">

            <table id="example" class="table table-striped table-responsive" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Libelle</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Contrat</th>
                        <!-- <th>actions</th> -->
                    </tr>
                </thead>
                <tbody>
                    {% for loi in lois %}
                    <tr>
                        <td>{{ loi.id }}</td>
                        <td>{{ loi.libelle }}</td>
                        <td>{{ loi.dateLoi ? loi.dateLoi|date('d-m-Y') : '' }}</td>
                        <td>{{ loi.description }}</td>
                        {% for contrat in loi.contrats %}
                        <td>{{ contrat.nom }}</td>
                        {% endfor %}

                        {#<td>
                            <a href="{{ path('loi_show', {'id': loi.id}) }}">show</a>
                            <a href="{{ path('loi_edit', {'id': loi.id}) }}">edit</a>
                        </td>#}
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">pas de lois pour cet article</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{#<a href="{{ path('loi_new') }}">Create new</a>#}
{% endblock %}