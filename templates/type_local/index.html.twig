{% extends 'base.html.twig' %}

{% block title %}TypeLocal index{% endblock %}

{% block body %}
    <h1>TypeLocal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_local in type_locals %}
            <tr>
                <td>{{ type_local.id }}</td>
                <td>{{ type_local.type }}</td>
                <td>{{ type_local.description }}</td>
                <td>
                    <a href="{{ path('type_local_show', {'id': type_local.id}) }}">show</a>
                    <a href="{{ path('type_local_edit', {'id': type_local.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_local_new') }}">Create new</a>
{% endblock %}
