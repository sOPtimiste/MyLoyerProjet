{% extends 'base.html.twig' %}

{% block title %}Liste des sites{% endblock %}

{% block body %}
<h1 class="text-center  text-success">Liste des sites</h1>
<div class="container">
    <a href="{{ path('site_new') }}">
        <span class="icon"><i class="fas fa-plus"></i></span>
        <span class="text">Add</span>
    </a>
    <div class="row">
        <div class="col">

            <table id="example" class="table table-striped table-responsive" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Lieu</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for site in sites %}
                    <tr>
                        <td>{{ site.id }}</td>
                        <td>{{ site.nom }}</td>
                        <td>{{ site.lieu }}</td>
                        <td>
                            <a href="{{ path('site_show', {'id': site.id}) }}">
                                <span class="icon"><i class="far fa-eye"></i></span>
                            </a>
                            <a href="{{ path('site_edit', {'id': site.id}) }}">
                                <span class="icon"><i class="fas fa-edit"></i></span>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8">pas d'enregistrement</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>


{% endblock %}