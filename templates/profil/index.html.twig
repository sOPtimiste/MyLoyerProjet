{% extends 'base.html.twig' %}

{% block title %}profil{{profile.prenom}}{% endblock %}

{% block body %}

<div class="container" style="background-color: #9CC1E2 ;">
    <div class="row align-items-center mb-5">
        <div class="col-3 text-center">
            <img src="{{asset('img/undraw_profile_1.svg')}}" class="avatar mb-3"
                alt="Avatar de {{profile.nom}}"><br>
            <span class="badge badge-primary">
                locaux
            </span>

        </div>
        <div class="col-9">
            <h1 class="text-white">{{profile.prenom}} {{profile.nom}}</h1>
            {% if profile is same as(app.user) %}
            <div class="mt-3">
                <a href="{{path('modif_profile')}}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                <a href="#" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
            </div>

            {% endif %}

        </div>
    </div>
</div>

{% endblock %}