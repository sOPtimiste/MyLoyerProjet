{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
<h1 class="text-center text-white mx-4" style="background-color: #459DEC;">Liste des facture</h1>
<div class="container mt-2">
    <a href="{{ path('facture_new') }}">
        <span class="icon"><i class="fas fa-plus"></i></span>
        <span class="text">Add</span>
    </a>
    <div class="row">
        <div class="col">
            <table id="example" class="table table-striped table-responsive" style="width:100%;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Montant</th>
                        <th>Date de creation</th>
                        <th>Nom Local</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for facture in factures %}
                    <tr>
                        <td>{{ facture.id }}</td>
                        <td>{{ facture.montant }} FCFA</td>
                        <td>{{ facture.dateFacture ? facture.dateFacture|date('d-m-Y H:i:s') : '' }}</td>
                        <td>{{ facture.local }}</td>
                        <td>
                            <a href="{{ path('facture_show', {'id': facture.id}) }}">
                                <span class="icon"><i class="far fa-eye"></i></span>
                            </a>
                            <a href="{{ path('facture_edit', {'id': facture.id}) }}">
                                <span class="icon"><i class="fas fa-edit"></i></span>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4">pas de factures</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>



{% endblock %}