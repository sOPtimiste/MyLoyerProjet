{% extends 'base.html.twig' %}

{% block title %}liste contrat{% endblock %}

{% block body %}
<h1 class="text-center  text-white mx-4" style="background-color: #459DEC;">Liste des contrats</h1>

<div class="container mt-2">
    <a href="{{ path('contrat_new') }}">
       <span class="icon"><i class="fas fa-plus"></i></span>
       <span class="text">Add</span> 
    </a>
    <div class="row">
        <div class="col">
            <table id="example" class="table table-striped table-responsive" style="width:100%">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Locataire</th>
                        <th>Bailleur</th>
                        {#<th>TypeCo</th>#}
                        <th>Local</th>
                        <th>Date Contrat</th>
                        <th>DureeBail</th>
                        <th>Caution</th>
                        <th>Mensualite</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contrat in contrats %}
                    <tr>
                        <td>{{ contrat.nom }}</td>
                        <td>{{ contrat.locataire}}</td>
                        <td>{{ app.user.prenom }} {{ app.user.nom }}</td>
                        {#<td>{{ contrat.typeContrat }}</td>#}
                        <td>{{ contrat.local }}</td>
                        <td>{{ contrat.dateContrat ? contrat.dateContrat|date('d-m-Y') : '' }}</td>
                        <td>{{ contrat.dureeDeBail }} /mois</td>
                        <td>{{ contrat.montantDeCotion }} FCFA</td>
                        <td>{{ contrat.montantDuMensualite }} FCFA</td>
                        <td>
                            <a href="{{ path('contrat_show', {'id': contrat.id}) }}">
                                <span class="icon"><i class="far fa-eye"></i></span>
                            </a>
                            <a href="{{ path('contrat_edit', {'id': contrat.id}) }}">
                                <span class="icon"><i class="fas fa-edit"></i></span>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8">pas d'enregistrement</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

</div>


{% endblock %}