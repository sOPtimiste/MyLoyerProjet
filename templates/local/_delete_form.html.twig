<form method="post" action="{{ path('local_delete', {'id': local.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ local.id) }}">
    <button class="btn">
        <span class="icon"><i class="fas fa-trash-restore"></i></span>
        <span class="text">Delete</span>
    </button>
</form>
