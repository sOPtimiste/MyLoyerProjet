{% extends 'base.html.twig' %}

{% block title %}Local index{% endblock %}

{% block body %}
    <h1>Local index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>IsEtat</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for local in locals %}
            <tr>
                <td>{{ local.id }}</td>
                <td>{{ local.nom }}</td>
                <td>{{ local.adresse }}</td>
                <td>{{ local.isEtat ? 'Yes' : 'No' }}</td>
                <td>{{ local.longitude }}</td>
                <td>{{ local.latitude }}</td>
                <td>
                    <a href="{{ path('local_show', {'id': local.id}) }}">show</a>
                    <a href="{{ path('local_edit', {'id': local.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('local_new') }}">Create new</a>
{% endblock %}
