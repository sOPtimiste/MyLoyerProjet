{% extends 'base.html.twig' %}

{% block title %}Liste local{% endblock %}

{% block body %}
<h1 class="text-center text-white mx-4" style="background-color: #459DEC;">Liste des locaux</h1>

<div class="container mt-2">
    <a href="{{ path('local_new') }}">
        <span class="icon"><i class="fas fa-plus"></i></span>
        <span class="text">Add</span>
    </a>
    <div class="row">
        <div class="col">

            <table id="example" class="table table-striped table-responsive" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Etat</th>
                        <th>Longitude</th>
                        <th>Latitude</th>
                        <th>TypeLocal</th>
                        <th>Description</th>
                        <th>nomSite</th>
                        <th>Lieu</th>
                        <th>actions</th>
                    </tr>
                </thead>
               
                <tbody>
                    {% for local in locals %}
                    <tr>
                        <td>{{ local.id }}</td>
                        <td>{{ local.nom }}</td>
                        <td>{{ local.adresse }}</td>
                        <td>{{ local.isEtat ? 'disponible' : 'occupe' }}</td>
                        <td>{{ local.longitude }}</td>
                        <td>{{ local.latitude }}</td>
                        <td>{{ local.typeLocal.type }}</td>
                        <td>{{ local.typeLocal.description|slice(0, 10) ~ '...' }}</td>
                        <td>{{ local.site.nom}}</td>
                        <td>{{ local.site.lieu|slice(0, 10) ~ '...'}}</td>
                        <td>
                            <a href="{{ path('local_show', {'id': local.id}) }}">
                                <span class="icon"><i class="far fa-eye"></i></span>
                            </a>
                            <a href="{{ path('local_edit', {'id': local.id}) }}">
                                <span class="icon"><i class="fas fa-edit"></i></span>
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7">pas d'enregistrement</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>


{% endblock %}