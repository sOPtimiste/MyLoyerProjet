{% extends 'base.html.twig' %}

{% block title %}Local{% endblock %}

{% block body %}
    <h1>Local</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ local.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ local.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ local.adresse }}</td>
            </tr>
            <tr>
                <th>IsEtat</th>
                <td>{{ local.isEtat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ local.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ local.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('local_index') }}">back to list</a>

    <a href="{{ path('local_edit', {'id': local.id}) }}">edit</a>

    {{ include('local/_delete_form.html.twig') }}
